#include <iostream>
#include <cstdlib>
#include <string>
#include <cstring>

using namespace std;

int main(){

  int test_num;
  int test_total;
  int test_score;

  cout << "Please enter how many test you wish to average today: "
  cin >> test_num;

  for (int x = 0 ;x <= test_num; x++)
     if (x < test_num)
	cout << "Please input a test score: ";
  	cin >> test_score;
	test_total = test_total + test_score;
     else
	cout  << "The average of you test scores is: " << test_score / test_num;
  return 0;

}
